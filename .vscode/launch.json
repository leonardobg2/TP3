{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TP3",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tp3",
            "args": ["input_1.txt"],

            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,

            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
